import sqlite3
import csv
import sys


csv.field_size_limit(sys.maxsize)


CSV_FILE = "products.csv"
DB_FILE = "products.db"
TABLE_NAME = "data"
BATCH_SIZE = 10000


conn = sqlite3.connect(DB_FILE)
cursor = conn.cursor()


with open(CSV_FILE, "r", encoding="utf-8", newline="") as file:

    reader = csv.reader(file, delimiter="\t", quotechar='"')
    headers = next(reader)

    columns = ", ".join([f'"{col}" TEXT' for col in headers])
    cursor.execute(f'CREATE TABLE IF NOT EXISTS {TABLE_NAME} ({columns})')
    conn.commit()

    print(f"–¢–∞–±–ª–∏—Ü–∞ '{TABLE_NAME}' —É—Å–ø–µ—à–Ω–æ —Å–æ–∑–¥–∞–Ω–∞.")

    batch = []
    total_inserted = 0

    for row_num, row in enumerate(reader, start=1):
        if len(row) == len(headers):
            batch.append(row)
        else:
            print(
                f"‚ö†Ô∏è  –ü—Ä–æ–ø—É—â–µ–Ω–∞ —Å—Ç—Ä–æ–∫–∞ {row_num} (–Ω–µ —Å–æ–≤–ø–∞–¥–∞–µ—Ç –∫–æ–ª–∏—á–µ—Å—Ç–≤–æ —Å—Ç–æ–ª–±—Ü–æ–≤)")

        if len(batch) >= BATCH_SIZE:
            cursor.executemany(
                f'INSERT INTO {TABLE_NAME} VALUES ({", ".join(["?"] * len(headers))})', batch)
            conn.commit()
            total_inserted += len(batch)
            print(f"‚úÖ –í—Å—Ç–∞–≤–ª–µ–Ω–æ {total_inserted} —Å—Ç—Ä–æ–∫...")
            batch = []

    if batch:
        cursor.executemany(
            f'INSERT INTO {TABLE_NAME} VALUES ({", ".join(["?"] * len(headers))})', batch)
        conn.commit()
        total_inserted += len(batch)

print(f"üéâ –ó–∞–≤–µ—Ä—à–µ–Ω–æ! –í—Å–µ–≥–æ –≤—Å—Ç–∞–≤–ª–µ–Ω–æ {total_inserted} —Å—Ç—Ä–æ–∫ –≤ '{DB_FILE}'.")


conn.close()
